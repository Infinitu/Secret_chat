<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jaebong.secerettalk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />




    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tworld"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <service
            android:name=".tcp.SecretTalkTCPService"
            android:exported="false">

        </service>

        <provider
            android:name=".chatting.ChattingProvider"
            android:authorities="com.example.jaebong.secerettalk.chatting.provider"
            android:enabled="true"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="com.example.jaebong.secerettalk.chatting.provider.READ"
            android:writePermission="com.example.jaebong.secerettalk.chatting.provider.WRITE" />




        <activity
            android:name=".home.HomeView"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".join.JoinView"
            android:label="@string/title_activity_join" />
        <activity
            android:name=".setting.SettingView"
            android:label="@string/title_activity_setting"></activity>
        <activity
            android:name=".add_friend.AddFriendView"
            android:label="@string/title_activity_add_friend"
            android:windowSoftInputMode="stateVisible"></activity>
        <activity
            android:name=".start_activity.StartView"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chatting.ChattingView"
            android:label="@string/title_activity_chatting"></activity>
        <activity
            android:name=".chatting.MessageBox"
            android:label="@string/title_activity_message_box"></activity>
    </application>

</manifest>
