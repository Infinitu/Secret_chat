<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaebong.secerettalk.Join"
    android:orientation="vertical"
    android:background="@drawable/activity_join">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#493333"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:id="@+id/join_tv_top"
            android:layout_gravity="center"
            android:textColor="#f3f3f3"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#bfb8bc">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3.2"
            android:background="#ffffff"
            android:layout_marginBottom="0.2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_add_profile"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_profile"
                android:background="@null"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="프로필 사진을 등록하세요"
                android:id="@+id/textView"
                android:layout_below="@+id/join_add_profile"
                android:layout_centerHorizontal="true"
                android:textColor="#bfb8bc" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginBottom="0.2dp"
            android:id="@+id/join_layout_nickName">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:id="@+id/textView2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/join_editText_nickName"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:text="가짜" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="0.2dp"
            android:background="#ffffff"
            android:id="@+id/join_layout_birth">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태어난 해"
                android:id="@+id/tv4"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_tv_birth"
                android:layout_marginLeft="200dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:hint="0000년"
                android:text="1995" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginBottom="0.2dp">

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/join_radioGroup_sex">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성"
                    android:textColor="#000000"
                    android:id="@+id/join_radio_sex_man"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:textSize="17sp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:textColor="#000000"
                    android:id="@+id/join_radio_sex_woman"
                    android:layout_marginLeft="95dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="17sp"
                    android:checked="false"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:button="@null" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginBottom="0.2dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/join_radioGroup_bloodType">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A형"
                    android:textColor="#000000"
                    android:id="@+id/join_radio_blood_a"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textSize="17sp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B형"
                    android:id="@+id/radioButton2"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:textSize="17sp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:button="@null"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB형"
                    android:id="@+id/radioButton3"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O형"
                    android:id="@+id/radioButton4"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:button="@null" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#ffffff"

            android:layout_weight="0.8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입을 통해 본은인 서비스의 이용약관 및 개인정보보호정책에 동의합니다"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:textColor="#bbbbbb"
                android:layout_marginLeft="20dp"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:id="@+id/join_layout_start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시  작"
            android:id="@+id/join_tv_start"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
